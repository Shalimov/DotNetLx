<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    
    <Target Name="CopyLxScripts" AfterTargets="Build">
        <ItemGroup>
            <LxScriptFiles Include="LxScripts\**\*.*" />
        </ItemGroup>
        <Copy SourceFiles="@(LxScriptFiles)" DestinationFolder="$(OutDir)\LxScripts\%(RecursiveDir)" />
    </Target>

</Project>
