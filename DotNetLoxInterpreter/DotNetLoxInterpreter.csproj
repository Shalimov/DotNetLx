<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    
    <Target Name="CopyLoxScripts" AfterTargets="Build">
        <ItemGroup>
            <LoxScriptFiles Include="LoxScripts\**\*.*" />
        </ItemGroup>
        <Copy SourceFiles="@(LoxScriptFiles)" DestinationFolder="$(OutDir)\LoxScripts\%(RecursiveDir)" />
    </Target>

</Project>
